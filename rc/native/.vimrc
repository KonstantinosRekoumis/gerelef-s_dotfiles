set autoindent
set expandtab
set shiftround
set shiftwidth=4
set smarttab
set tabstop=4
set hlsearch
set ignorecase
set incsearch
set smartcase
set encoding=utf-8
syntax enable
set wrap
set laststatus=2
set ruler
set wildmenu
set number
set title
set nofoldenable
set spelllang=en_us
set undolevels=999
set history=999
set ttyfast
set autoread " this will reload files if changed externally... debatable somewhat

nmap ; :
map h <insert>
map i <Up>
map j <Left>
map k <Down>
map l <Right>
