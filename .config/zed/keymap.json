[
    {
        "bindings": {
            // MISSING ctrl + scrollup/down increase/decrease buffer_font
            // ---------------- EDITOR TOGGLES ----------------
            "f1": "workspace::ToggleLeftDock",
            "ctrl-+": "zed::IncreaseBufferFontSize",
            "ctrl-_": "zed::DecreaseBufferFontSize",
            "ctrl-`": "terminal_panel::ToggleFocus",
            "shift shift": "file_finder::Toggle",
            "ctrl ctrl": "command_palette::Toggle",
            "alt alt": "project_symbols::Toggle",
            "ctrl-w": "pane::CloseActiveItem",
            "ctrl-alt-f": "go_to_line::Toggle",
            "ctrl-shift-f": "pane::DeploySearch",
            "ctrl-f": "buffer_search::Deploy",
            "ctrl-r": [
                "workspace::SendKeystrokes",
                "ctrl-h"
            ],
            // ---------------- LINE MANIP ----------------
            "ctrl-z": "editor::Undo",
            "ctrl-shift-z": "editor::Redo",
            "ctrl-y": "editor::Redo",
            "ctrl-d": "editor::DuplicateLineDown",
            "ctrl-shift-d": "editor::DuplicateLineUp",
            "ctrl-pageup": "pane::ActivatePrevItem",
            "ctrl-pagedown": "pane::ActivateNextItem",
            "ctrl-shift-up": "editor::MoveLineUp",
            "ctrl-shift-down": "editor::MoveLineDown",
            "ctrl-alt-up": "editor::AddSelectionAbove",
            "ctrl-alt-down": "editor::AddSelectionBelow",
            "ctrl-alt-left": null,
            "ctrl-alt-right": null,
            // ---------------- JETBRAINS ----------------
            "shift-f6": "project_panel::Rename",
            "ctrl-l": "editor::Format",
            // ---------------- BROWSER BINDS ----------------
            "ctrl-t": "workspace::NewFile",
            "ctrl-shift-t": "pane::ReopenClosedItem"
        }
    }
]
