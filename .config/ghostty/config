background = 282828
foreground = eeeeee
background-opacity = 0.85

cursor-style = bar
gtk-titlebar = false
linux-cgroup = always
confirm-close-surface=false

# clear all shortcuts; configure the defaults manually.
keybind = clear

# useful for hot-reloading changes when titlebar is hidden
keybind = ctrl+shift+,=reload_config

keybind = ctrl+shift+s=write_scrollback_file:open
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

keybind = ctrl+shift+a=toggle_tab_overview
keybind = ctrl+shift+w=close_surface
keybind = ctrl+shift+t=new_tab
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab

keybind = shift+page_up=scroll_page_up
keybind = shift+page_down=scroll_page_down

keybind = ctrl+equal=increase_font_size:0.5
keybind = ctrl+-=decrease_font_size:0.5
keybind = ctrl+0=reset_font_size
